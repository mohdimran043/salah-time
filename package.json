{
  "name": "waqf-qatar-prayer-times",
  "version": "1.0.0",
  "description": "Official Qatar prayer times API using Ministry of Awqaf data",
  "main": "index.js",
  "scripts": {
    "start": "functions-framework --target=api",
    "deploy": "gcloud functions deploy waqf-api --runtime nodejs18 --trigger-http --allow-unauthenticated",
    "deploy-sync": "gcloud functions deploy waqf-sync --runtime nodejs18 --trigger-http --allow-unauthenticated",
    "test": "jest",
    "dev": "nodemon --exec functions-framework --target=api"
  },
  "dependencies": {
    "@google-cloud/functions-framework": "^3.3.0",
    "@google-cloud/firestore": "^7.1.0",
    "@google-cloud/storage": "^7.7.0",
    "axios": "^1.6.0",
    "moment-timezone": "^0.5.43",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0"
  },
  "engines": {
    "node": "18"
  }
}